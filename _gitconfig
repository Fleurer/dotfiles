[user]
    name = fleuria
    email = me.ssword@gmail.com

[push]
    default = simple

[color]
    branch = auto
    status = auto
    diff = auto
    ui = auto

[color "diff"]
	whitespace = red reverse

[core]
    excludesfile = ~/.gitignore

[alias]
    st = status
    stt = !"tig status"
    ci = commit
    br = branch
    c = commit -m
    co = checkout
    df = diff --cached
    ls = !"git ls-tree -r master | cut -f2"
    mg = merge --no-ff
    mgg = merge
    lg = log -p
    who = shortlog -s --
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(blue) %an %Creset' --abbrev-commit --date=relative
    pylint = !"git-pylint"

[tig "bind"]
    status = a status-update
