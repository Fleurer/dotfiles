[color]
    branch = auto
    status = auto
    diff = auto
    ui = auto

[core]
    excludesfile = ~/.gitignore

[alias]
    st = status
    stt = !"tig status"
    ci = commit
    br = branch
    co = checkout
    df = diff --cached
    ls = !"git ls-tree -r master | cut -f2"
    mg = merge --no-ff
    lg = log -p
    who = shortlog -s --
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(blue) %an %Creset' --abbrev-commit --date=relative

[tig "bind"]
    status = a status-update

