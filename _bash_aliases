alias bundle='n bundle'
alias vundle="n vim +BundleInstall +qall"
alias gem="n gem"
alias wget="n wget"

alias be="bundle exec"
alias bs="bundle show"

alias ack="ack-grep"
alias ipy='ipython3'

alias ll='ls -alF'
alias la='ls -A'
alias df='df -h'
alias l='ls -CF'
alias open='gnome-open'
alias pgrep='pgrep -l'
alias ggrep='git grep -n'
alias untar='tar -zxvf'
alias cdr='while [ ! -d .git ] && [ ! `pwd` = "/" ] && [ ! `pwd` = ~ ]; do cd ..; done;'

alias t='time'
alias pyprof='python -m cProfile'
alias rbprof='ruby-prof'
